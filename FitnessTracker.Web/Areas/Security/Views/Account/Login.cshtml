@model FitnessTracker.Application.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-box">
    <h2>Přihlášení</h2>

    <form asp-area="Security" asp-controller="Account" asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Uživatelské jméno</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Heslo</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Zapamatovat</label>
        </div>

        <button class="btn btn-primary w-100" type="submit">Přihlásit</button>
    </form>

    <div class="mt-3">
        Nemáš účet?
        <a asp-area="Security" asp-controller="Account" asp-action="Register">Registrace</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
