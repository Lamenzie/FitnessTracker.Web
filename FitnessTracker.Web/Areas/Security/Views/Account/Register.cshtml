@model FitnessTracker.Application.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="auth-box">
    <h2>Registrace</h2>

    <form asp-area="Security" asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Uživatelské jméno</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Heslo</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Potvrzení hesla</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button class="btn btn-success w-100" type="submit">Registrovat</button>
    </form>

    <div class="mt-3">
        Máš účet?
        <a asp-area="Security" asp-controller="Account" asp-action="Login">Přihlášení</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
