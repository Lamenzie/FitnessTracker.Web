@model IList<FitnessTracker.Domain.Entities.TrainingSession>

@{
    ViewData["Title"] = "Moje tréninky";
}

<h1 class="mb-4">Moje tréninky</h1>

<form asp-area="User"
      asp-controller="Training"
      asp-action="Create"
      method="get"
      class="mb-4">
    <button type="submit" class="btn btn-primary">
        + Nový trénink
    </button>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Zatím nemáš žádné tréninky. Začni kliknutím na <strong>Nový trénink</strong>.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Datum</th>
                <th>Cvik</th>
                <th>Váha (kg)</th>
                <th>Opakování</th>
                <th>Celková zátěž</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Date.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@t.Exercise?.Name</td>
                    <td>@t.Weight</td>
                    <td>@t.Repetitions</td>
                    <td>@t.TotalWeight</td>
                </tr>
            }
        </tbody>
    </table>
}
