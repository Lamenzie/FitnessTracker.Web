@model FitnessTracker.Domain.Entities.TrainingSession

@{
    ViewData["Title"] = "Nový trénink";
    var exercises = ViewBag.Exercises as IEnumerable<FitnessTracker.Domain.Entities.Exercise>;
}

<h1>Nový trénink</h1>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Cvik</label>
        <select asp-for="ExerciseId"
                class="form-select"
                asp-items="@(new SelectList(exercises, "Id", "Name"))">
            <option value="">-- vyber cvik --</option>
        </select>
        <span asp-validation-for="ExerciseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Váha (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Opakování</label>
        <input asp-for="Repetitions" class="form-control" />
        <span asp-validation-for="Repetitions" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Poznámka</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Uložit</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Zpět</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
